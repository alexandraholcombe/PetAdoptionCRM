@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PetAdoptionCRM.ViewModels;
@model PetsIndexViewModel

<div class="all-pets">
    @if (@Model.AllPets.Count() == 1)
    {
        <div class="pet-tile">
            @*<img runat="server" src="@Model.OnePet.ImageKey">*@
            <img src="~/images/defaultpet.png" />
            <h3>@Html.ActionLink(@Model.OnePet.Name, "Details", "Pets", new { id = @Model.OnePet.Id })</h3>
            <p>@Model.OnePet.Species.DisplayName</p>
            <p>@Model.OnePet.Breed.Name</p>
            <p>@Model.OnePet.About</p>
        </div>
    }
    else
    {
        @foreach (var pet in @Model.AllPets)
        {
            <div class="pet-tile">
                @*<img runat="server" src="@pet.ImageKey">*@
                <img src="~/images/defaultpet.png" />
                <h3>@Html.ActionLink(@pet.Name, "Details", "Pets", new { id = @pet.Id })</h3>
                <p>@pet.Species.DisplayName</p>
                <p>@pet.Breed.Name</p>
                <p>@pet.About</p>
            </div>

        }
    }
</div>