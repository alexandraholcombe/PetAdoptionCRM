@{
    ViewData["Title"] = @Model.Pet.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PetAdoptionCRM.ViewModels

@model PetDetailsViewModel

<div class="pet-details thumbnail">
    <div class="row">
        <div class="col-md-5">
            <img src="~/images/defaultpet.png" />
        </div>
        <div class="col-md-7">
            <h1>@Model.Pet.Name</h1>
            <div class="content">
                <ul class="list-unstyled">
                    <li>
                        <span class="title">Species : </span> @Model.Pet.Species.DisplayName
                    </li>
                    <li>
                        <span class="title">Breed : </span> @Model.Pet.Breed.Name
                    </li>
                    <li>
                        <span class="title">Sex : </span> @Model.Pet.Sex
                    </li>
                </ul>
                <p class="about">
                    <span class="title">About :</span>
                    <p>
                        @Model.Pet.About
                    </p>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade delete-pet-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Delete @Model.Pet.Name</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Delete" class="delete-pet">
                    <input type="hidden" value="@Model.Pet.Id" id="delete-pet-id" />
                    @Html.Hidden("RedirectTo", Url.Action("Index", "Pets"));
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary submit-delete">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="add-pet-link">
    <a href="@Url.Action("Edit", "Pets", new { id = Model.Pet.Id })"><i class="fa fa-pencil add-breed" aria-label="Edit Pet"></i></a>
    <a href="@Url.Action("Delete", "Pets", new { id = Model.Pet.Id })" data-toggle="modal" data-target=".delete-pet-modal"><i class="fa fa-times-circle add-breed" aria-label="Delete Pet"></i></a>
</div>