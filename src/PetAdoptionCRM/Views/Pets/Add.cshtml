
@{
    ViewData["Title"] = "Add New Pet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PetAdoptionCRM.ViewModels;

@model AddPetViewModel

<h2>Register a new Account</h2>

@using (Html.BeginForm("Add", "Pets", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Pet.AddedBy)

    <div class="form-group">
        @Html.LabelFor(m => m.Pet.Name)
        @Html.TextBoxFor(m => m.Pet.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Pet.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Pet.Species)
        @Html.TextBoxFor(m => m.Pet.Species, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Pet.Species, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Pet.Breed)
        @Html.TextBoxFor(m => m.Pet.Breed, new { @class = "form-control", type = "Breed", required = "required" })
        @Html.ValidationMessageFor(m => m.Pet.Breed, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Pet.Sex)
        @Html.TextBoxFor(m => m.Pet.Sex, new { @class = "form-control", type = "password", required = "required" })
        @Html.ValidationMessageFor(m => m.Pet.Sex, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Pet.Size)
        @Html.TextBoxFor(m => m.Pet.Size, new { @class = "form-control", type = "password", required = "required" })
        @Html.ValidationMessageFor(m => m.Pet.Size, null, new { @class = "text-danger" })
    </div>

    <input type="submit" value="Register" class="btn btn-primary" />
}